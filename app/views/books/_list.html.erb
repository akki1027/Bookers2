<!-- made -->
			<div class="row">
				<% if book.errors.any? %>
					<div class="alert">
						<h2 class="error-count"><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>
						<ul>
						<% book.errors.full_messages.each do |message| %>
							<li><%= message %></li>
						<% end %>
						</ul>
					</div>
				<% end %>
			</div>

			<div class="col-xs-3">
			<!-- ユーザーインフォ -->
				<div class="user-info">
					<h2>User info</h2>
					<div class="profile-picture">
						<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-square pull-left profile-img", fallback: "no_image.jpg" %>
					</div>
					<table class="table">
						<tbody>
							<tr>
								<th>name</th>
								<th><%= user.name %></th>
							</tr>
							<tr>
								<th>introduction</th>
								<th><%= user.introduction %></th>
							</tr>
						</tbody>
					</table>
					<div class="row">
						<%= link_to edit_user_path(user) do %>
							<button class="btn btn-default col-xs-12"><span class="glyphicon glyphicon-wrench"></span></button>
						<% end %>
					</div>
				</div>
			<!-- ここまでユーザーインフォ -->
			<!-- New Bookのエリア -->
				<div class="new-book">
					<h2>New book</h2>
					<!-- New Bookのフォーム -->
					<%= form_for(book) do |f| %>
						<div class="field row">
							<%= f.label :title, "Title" %>
							<div class="field-error">
								<%= f.text_field :title, class:"col-xs-12" %>
							</div>
						</div>
						<div class="field row">
							<%= f.label :body, "Opinion" %>
							<div class="field-error">
								<%= f.text_area :body, class:"col-xs-12" %>
							</div>
						</div>
						<div class="field row">
							<%= f.submit 'Create Book', class:"btn btn-primary col-xs-12"%>
						</div>
					<% end %>
					<!-- ここまでNew Bookのフォーム -->
				</div>
			<!-- ここまでNew Bookのエリア -->
			</div>