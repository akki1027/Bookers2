<!-- made -->
			<div class="row">
				<% if book.errors.any? %>
					<div class="alert">
						<h2 class="error-count"><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>
						<ul>
						<% book.errors.full_messages.each do |message| %>
							<li><%= message %></li>
						<% end %>
						</ul>
					</div>
				<% end %>
			</div>

			<div class="col-xs-3">
			<!-- ユーザーインフォ -->
				<div class="user-info">
					<h2>User info</h2>
					<div class="profile-picture">
						<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-square pull-left profile-img", fallback: "no_image.jpg" %>
					</div>
					<table class="table">
						<tbody>
							<tr>
								<th>name</th>
								<th><%= user.name %></th>
							</tr>
							<tr>
								<th>introduction</th>
								<th><%= user.introduction %></th>
							</tr>
							<tr>
								<th>
									<% user ||= current_user %>
									<div class="stats">
										<%= link_to user_follow_list_path(@user) do %>
										    <strong id="following" class="stat">
										      <%= user.follower.count %>
										    </strong>
										    following
										<% end %>
									</div>
								</th>
							</tr>
							<tr>
								<th>
									<div class="stats">
										<%= link_to user_follower_list_path(@user) do %>
										    <strong id="followers" class="stat">
										      <%= user.followed.count %>
										    </strong>
										    followers
										<% end %>
									</div>
								</th>
							</tr>
						</tbody>
					</table>
					<div class="row">
						<% if @user.id == current_user.id %>
							<%= link_to edit_user_path(user) do %>
								<button class="btn btn-default col-xs-12"><span class="glyphicon glyphicon-wrench"></span></button>
							<% end %>
						<% else %>
							<% unless current_user == user %>
				  				<% if current_user.following?(user) %>
									<%= form_for(current_user.follower.find_by(followed_id: user.id), html: { method: :delete }) do |f| %>
										<%= f.submit "Unfollow", class: "btn btn-large btn-danger follow-btn" %>
									<% end %>
							<% else %>
									<%= form_for(current_user.follower.build(followed_id: user.id)) do |f| %>
												<div><%= f.hidden_field :followed_id %></div>
										<%= f.submit "Follow", class: "btn btn-large btn-primary follow-btn" %>
									<% end %>
								<% end %>
							<% end %>
						<% end %>
					</div>
				</div>
			<!-- ここまでユーザーインフォ -->
			<!-- New Bookのエリア -->
				<div class="new-book">
					<h2>New book</h2>
					<!-- New Bookのフォーム -->
					<%= form_for(book) do |f| %>
						<div class="field row">
							<%= f.label :title, "Title" %>
							<div class="field-error">
								<%= f.text_field :title, class:"col-xs-12" %>
							</div>
						</div>
						<div class="field row">
							<%= f.label :body, "Opinion" %>
							<div class="field-error">
								<%= f.text_area :body, class:"col-xs-12" %>
							</div>
						</div>
						<div class="field row">
							<%= f.submit 'Create Book', class:"btn btn-primary col-xs-12"%>
						</div>
					<% end %>
					<!-- ここまでNew Bookのフォーム -->
				</div>
			<!-- ここまでNew Bookのエリア -->
			</div>