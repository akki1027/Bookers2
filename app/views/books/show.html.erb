<body>
	<div class="container">
		<div class="row">
			<%= render 'books/list', books: @books %>

			<!-- 右側のテーブル -->
			<div class="col-xs-9">
				<h2>Book detail</h2>
				<table class="table table-hover table-inverse">
					<tbody>
						<tr>
							<td><!-- ユーザーアイコン --></td>
							<td><%= link_to @book.title, book_path %></td>
							<td><%= @book.body %></td>
							<td><%= link_to "Edit", edit_book_path, class:"btn-sm btn-success" %></td>
							<td><% if @book.user == current_user %>
									<%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？", class:"btn-sm btn-danger" %>
								<% end %>
								</td>
							<td></td>
						</tr>
					</tbody>
				</table>
			</div>
			<!-- ここまで右側のテーブル -->
		</div>
	</div>
</body>