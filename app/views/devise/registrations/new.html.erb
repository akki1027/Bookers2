<body>
  <div class="container">
    <h2>Sign up</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

<!-- 名前入力欄を追加 -->
      <div class="field">
        <%= f.label :name, "Name" %><br />
        <%= f.text_field :name %>
      </div>
<!-- ここまで名前入力欄 -->

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <h2>Your address</h2>
      <h4>zip code</h4>
      <%= f.text_field :postcode, label: false %>

      <h4>Prefecture</h4>
      <%= f.input :prefecture_code, collection: JpPrefecture::Prefecture.all, :value_method => :name, include_blank: '都道府県', label: false %>

      <h4>city</h4>
      <%= f.text_field :address_city %>

      <h4>street</h4>
      <%= f.text_field :address_street %>

      <h4>builbding name</h4>
      <%= f.text_field :address_building, class:"building-form" %>

      <div class="actions">
        <%= f.submit "Sign up", class:"sign-up-btn" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</body>
