
										<% unless current_user == user %>
							  				<% if current_user.following?(user) %>
												<%= form_for(current_user.follower.find_by(followed_id: user.id), html: { method: :delete }, remote: true) do |f| %>
													<%= f.submit "Unfollow", class: "btn btn-large btn-danger follow-btn" %>
												<% end %>
										<% else %>
												<%= form_for(current_user.follower.build(followed_id: user.id), remote: true) do |f| %>
														<div><%= f.hidden_field :followed_id %></div>
													<%= f.submit "Follow", class: "btn btn-large btn-primary follow-btn" %>
												<% end %>
											<% end %>
										<% end %>
