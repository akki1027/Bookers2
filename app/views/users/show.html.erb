<body>
	<div class="container">
		<div class="row">
			<% if flash[:update] %>
				<div class="flash">
					<%= flash[:update] %>
				</div>
			<% end %>
			<div class="notice">
				<%= flash[:notice] %>
			</div>
		</div>

		<div class="row">
			<%= render 'books/list', book: @book, user: @user %>

			<!-- 右側のテーブル -->
			<div class="col-xs-9">
				<h2>Books</h2>
				<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th><!-- 空白 --></th>
							<th>Title</th>
							<th>Opinion</th>
							<th colspan="3"></th>
						</tr>
					</thead>
					<% @books.each do |book| %>
						<tbody>
							<tr>
								<td><%= attachment_image_tag @user, :profile_image, :fill, 50, 0, format: 'jpeg', class: "img-square pull-left profile-img", fallback: "no_image.jpg", size: "40x40" %></td>
								<td><%= link_to book.title, book_path(book) %></td>
								<td><%= book.body %></td>
								<td></td>
								<td></td>
								<td></td>
							</tr>
						</tbody>
					<% end %>
				</table>
			</div>
			<!-- ここまで右側のテーブル -->
		</div>
	</div>
</body>

